<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.noussa.crowd.activity.MenuPrincipal"
    tools:showIn="@layout/app_bar_menu_principal">


    <ImageView
        android:id="@+id/logo_animation"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:src="@drawable/aaa"
        android:layout_marginTop="110dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/pink"
        android:textSize="18dp"
        android:layout_marginLeft="10dp"
        android:text=".NETLAMMOU
A platfom for volunteers and NGOs."
        android:layout_below="@+id/logo_animation"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
